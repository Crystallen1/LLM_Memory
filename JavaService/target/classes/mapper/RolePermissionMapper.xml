<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.crystallen.lc.mapper.RolePermissionMapper">
    <select id="selectPermissionList" parameterType="java.lang.Long" resultType="java.lang.Long">
        SELECT permission_id
        FROM Role_Permissions
        WHERE role_id = #{roleId}
    </select>
    <select id="selectPermissionListByList" parameterType="list" resultType="java.lang.Long">
        SELECT DISTINCT permission_id
        FROM Role_Permissions
        WHERE role_id IN
        <foreach collection="list" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </select>

</mapper>